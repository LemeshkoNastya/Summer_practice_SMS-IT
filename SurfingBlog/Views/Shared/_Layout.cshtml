<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top surfheading surfform text-color">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")"><img src="@Url.Content("~/Content/Images/logo.jpg")" height="60" /></a>
            </div>
            <div class="navbar-collapse collapse lenta-news">
                <ul class="nav navbar-nav text-heading pull-right">

                    @if (Session["UserId"] != null)
                    {
                        var photo = Session["Photo"];
                        if (photo != null)
                        {
                            <img src=@Url.Content(photo.ToString()) height="25" />
                        }
                        else
                        {
                            <img src=@Url.Content("~/Content/Images/avatar.png") height="25" />
                        }
                        @Session["Nickname"]
                        <a href="@Url.Action("Logout", "Authorization")"><img src="@Url.Content("~/Content/Images/logout.jpg")" height="25" width="25" /></a>

                    }

                    else
                    {
                        <li>@Html.ActionLink("Войти", "Index", "Authorization")</li>
                        <li>@Html.ActionLink("Регистрация", "Index", "Registration")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

@model SurfingBlog.Models.DBModels.User
@{
    ViewBag.Title = "Регистрация";
}


<div class="panel surfform location-panel-reg">

    <div class="panel-heading surfheading">
        Регистрация нового пользователя
    </div>

    <div class="panel-body">

        @using (Html.BeginForm("Register", "Registration", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <form>
                <div class="form-group">
                    @Html.LabelFor(model => model.Nickname)
                    <br>
                    @Html.EditorFor(model => model.Nickname, new { htmlAtributes = new { @class = "form-control", title = "От 3 до 20 символов. Латиница, кириллица, цифры и подчеркивания" } })
                    @Html.ValidationMessageFor(model => model.Nickname)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Email)
                    <br>
                    @Html.EditorFor(model => model.Email, new { htmlAtributes = new { @class = "form-control", title = "Пример ex@example.ex" } })
                    @Html.ValidationMessageFor(model => model.Email)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Password)
                    <br>
                    @Html.PasswordFor(model => model.Password, new { htmlAtributes = new { @class = "form-control", type = "password", title = "От 6 до 20 символов. Латиница, кириллица, цифры и подчеркивания" } })
                    @Html.ValidationMessageFor(model => model.Password)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.PasswordConfirm)
                    <br>
                    @Html.PasswordFor(model => model.PasswordConfirm, new { htmlAtributes = new { @class = "form-control", type = "password", title = "От 6 до 20 символов. Латиница, кириллица, цифры и подчеркивания" } })
                    @Html.ValidationMessageFor(model => model.PasswordConfirm)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.LastName)
                    <br>
                    @Html.EditorFor(model => model.LastName, new { htmlAtributes = new { @class = "form-control", title = "" } })
                    @Html.ValidationMessageFor(model => model.LastName)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Name)
                    <br>
                    @Html.EditorFor(model => model.Name, new { htmlAtributes = new { @class = "form-control", title = "" } })
                    @Html.ValidationMessageFor(model => model.Name)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Photo)
                    <input name="imageData" type="file" accept="image/jpeg" />
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ContactInf)
                    @Html.TextAreaFor(model => model.ContactInf, 10, 100, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.About)
                    @Html.TextAreaFor(model => model.About, 10, 100, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Progress)
                    @Html.TextAreaFor(model => model.Progress, 10, 100, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-block surfheading">Зарегистрироваться</button>
                </div>

            </form>
        }
    </div>

</div>

<div class="location-panel-reg">
    Уже есть аккаунт?
    @Html.ActionLink("Войти", "Index", "Authorization", null, new { @class = "btn btn-default surfheading" })
</div>

